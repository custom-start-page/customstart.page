    const centerText = function(text, offset) {
        let outputText = '';

        for (let i = 0; i < 40 - offset - (text.length + 1)/2; i++) {
            outputText += ' ';
        }

        outputText += text;

        for (let i = 0; i < 40 - offset - (text.length)/2; i++) {
            outputText += ' ';
        }

        return outputText;
    }

    const centerMultilineText = function(text) {
        let outputText = '';

        for (let line of text.split('\n')) {
            outputText += '██ ' + centerText(line, 3) + ' ██\n';
        }

        return outputText;
    }
%>
